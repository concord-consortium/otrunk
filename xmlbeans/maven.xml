<project default="default"
    xmlns:j="jelly:core"
    xmlns:ant="jelly:ant"
    xmlns:maven="jelly:maven">

	<ant:taskdef name="xmlbean" classname="org.apache.xmlbeans.impl.tool.XMLBean">
		<ant:classpath>
	    		<ant:path refid="maven.dependency.classpath"/>
  		</ant:classpath>
	</ant:taskdef>

    <preGoal name="java:compile">
    	<ant:echo message="jar path: ${plugin.getDependencyPath('xmlbeans:xbean-apache')}"/>

    	<ant:xmlbean srcgendir="gensrc" schema="schema">
			<ant:classpath>
		    	<ant:path refid="maven.dependency.classpath"/>
		    </ant:classpath>
    	</ant:xmlbean>
    </preGoal>
</project>