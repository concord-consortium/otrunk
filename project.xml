<?xml version="1.0" encoding="UTF-8"?>
<project>
    <!-- Inherit main project xml file -->
    <extend>../Builds/project.xml</extend>
    <!-- Project specific parameters -->
    <artifactId>otrunk</artifactId>
    <name>OTrunk</name>
    <groupId>${pom.artifactId}</groupId>
    <currentVersion>SNAPSHOT</currentVersion>
    <dependencies>
        <dependency>
            <groupId>jdom</groupId>
            <artifactId>jdom</artifactId>
            <version>1.0</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>jug</groupId>
            <artifactId>jug</artifactId>
            <version>1.1</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>loader</groupId>
            <artifactId>loader</artifactId>
            <version>SNAPSHOT</version>
            <type>jar</type>
            <properties>
                <cc.proj>Loader</cc.proj>
                <cc.path>Loader/lib</cc.path>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>framework</groupId>
            <artifactId>framework</artifactId>
            <version>SNAPSHOT</version>
            <type>jar</type>
            <properties>
                <cc.proj>Framework</cc.proj>
                <cc.path>Framework/lib</cc.path>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>swing</groupId>
            <artifactId>swing</artifactId>
            <version>SNAPSHOT</version>
            <type>jar</type>
            <properties>
                <cc.proj>Swing</cc.proj>
                <cc.path>Swing/lib</cc.path>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>frameworkview</groupId>
            <artifactId>frameworkview</artifactId>
            <version>SNAPSHOT</version>
            <type>jar</type>
            <properties>
                <cc.proj>FrameworkView</cc.proj>
                <cc.path>FrameworkView/lib</cc.path>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
        </unitTest>
    </build>
</project>

